</header>
<div class="container">
  <div class="section-title text-center">
    <h3 class="mt-5">REGISTER</h3>

    <div class="row">
      <div class="col-xl-12 col-md-12 col-sm-12">
        <div class="contact_form">
          <div id="message"></div>
          <form
            class=""
            name="contactform"
            method="post"
            action="users/register"
          >
            <div class="row row-fluid">
              <div class="mx-auto mb-2 col-sm-8">
                <% if(flashMessages){ %> <% if(flashMessages.errors){ %>
                <div class="alert alert-danger mb-3">
                  <%= flashMessages.errors %>
                </div>
                <% } } %>
                
                <input
                  type="text"
                  name="name"
                  id="name"
                  class="form-control"
                  placeholder="Name"
                />
              </div>
              <div class="mx-auto mb-2 col-sm-8">
                
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control"
                  placeholder="Email"
                />
              </div>
              <div class="mx-auto mb-2 col-sm-8">
                
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                  placeholder="Password"
                />
              </div>
              <div class="mx-auto mb-2 col-sm-8">
                 
                <input
                  type="text"
                  name="imageURL"
                  id="image"
                  class="form-control"
                  placeholder="Please insert an url including your photo"
                />
              </div>
              <div class="mx-auto mb-2 col-sm-8">
                <select
                  name="role"
                  class="form-control"
                  id=""
                  style="height: auto"
                  value="Select your role"
                >
                  <option value="client">Client</option>
                  <option value="fitness-instructor">Fitness Instructor</option>
                </select>
              </div>
              <div class="mx-auto col-sm-8">
                <button
                  type="submit"
                  value="LOGIN"
                  id="submit"
                  class="btn btn-warning btn-radius btn-brd grd1 btn-block"
                >
                  REGISTER
                </button>
              </div>
           
          </form>
        </div>
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</div>
<!-- end container -->

<%- include('partials/_footer') %>
